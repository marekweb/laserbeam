{
  "name": "laserbeam",
  "repository": "marekweb/laserbeam",
  "version": "0.2.1",
  "license": "MIT",
  "dependencies": {
    "@babel/parser": "^7.12.5",
    "estraverse": "^5.2.0",
    "hast-util-classnames": "^1.0.2",
    "hast-util-to-string": "^1.0.4",
    "hastscript": "^6.0.0"
  },
  "devDependencies": {
    "eslint": "^7.13.0",
    "jest": "^26.6.3",
    "prettier": "^2.1.2"
  },
  "files": [
    "index.js",
    "parse.js",
    "convert-babel-tokens.js",
    "highlight-nodes.js",
    "transform-tagged-comments.js"
  ],
  "scripts": {
    "lint": "eslint .",
    "format": "prettier --write .",
    "test": "jest"
  },
  "prettier": {
    "arrowParens": "avoid",
    "proseWrap": "always"
  },
  "jest": {
    "testEnvironment": "node"
  },
  "eslintConfig": {
    "parserOptions": {
      "ecmaVersion": 2020
    },
    "env": {
      "es6": true,
      "node": true,
      "jest": true
    },
    "extends": "eslint:recommended",
    "rules": {
      "no-console": "off"
    }
  }
}
